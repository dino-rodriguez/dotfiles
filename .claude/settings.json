{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git show*)",
      "Bash(git branch*)",
      "Bash(git remote*)",
      "Bash(git tag*)",
      "Bash(git blame*)",
      "Bash(git shortlog*)",
      "Bash(git stash list*)",
      "Bash(git rev-parse*)",
      "Bash(git ls-files*)",
      "Bash(git config --get*)",
      "Bash(git config --list*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "linear-cli@linear-cli": true
  }
}
